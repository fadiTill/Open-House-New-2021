<%= form_with(model: house, local: true) do |form| %>
  <%=  render "layouts/validation", item: @house %>
  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.text_field :size, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :typehouses, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :bedrooms %>
    <%= form.text_field :bedrooms, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :bathrooms %>
    <%= form.text_field :bathrooms, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :parking_spaces %>
    <%= form.text_area :parking_spaces, class: "form-control" %>
  </div>


  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>

  
  
  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>



  <br></br>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-lg btn-block btn-success" %>
  </div>
<% end %>
